<div class="container">
<div class="row">
	<div class="col-md-8">
		<div class="thumbnail">
			<%= image_tag @collection.image.url %>
		</div> 	
	</div>
	<div class="col-md-4">
		<h3><%= @collection.name %></h3>
		<p><%= number_to_currency(@collection.price) %></p>
		<p><%= @collection.description %></p>
	</div>
</div>



<%= link_to 'Edit', edit_collection_path(@collection), class: "btn btn-link" %> |
<%= link_to 'Back', collections_path, class: "btn btn-link" %>
</div>